{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "sourceMap": false,
    "baseUrl": "src",
    "rootDir": "src",
    "paths": {
      "@components/*": [ "components/*" ],
      "@contexts/*": [ "contexts/*" ],
      "@enums/*": [ "enums/*" ],
      "@images/*": [ "img/*" ],
      "@services/*": [ "services/*" ],
      "@hooks/*": [ "hooks/*" ],
    }
  },
  "include": [
    "src"
  ]
}
